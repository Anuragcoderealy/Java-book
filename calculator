Scanner sc = new Scanner(System.in);
        int a = sc.nextInt();
        int b = sc.nextInt();
        System.out.println("press 1 for add, 2 for sub, 3 for multiply, 4 for add");
        int operation = sc.nextInt();
        switch(operation) {
        
            case 1:
            System.out.println(a+b);
            break;
            case 2:
            System.out.println(a-b);
            break;
            case 3:
            System.out.println(a*b);
            break;
            case 4:
            System.out.println(a/b);
            break;
           

            default: System.out.println("wrong key");
            
        }
