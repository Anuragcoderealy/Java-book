Scanner sc = new Scanner(System.in);
        int a = sc.nextInt();
        int b = sc.nextInt();
        System.out.println("press + for add, - for sub, * for multiply and / for divide");
        int operation = sc.nextInt();
        switch(operation) {
        
            case +:
            System.out.println(a+b);
            break;
            case -:
            System.out.println(a-b);
            break;
            case *:
            System.out.println(a*b);
            break;
            case /:
            System.out.println(a/b);
            break;
           

            default: System.out.println("wrong key");
            
        }
